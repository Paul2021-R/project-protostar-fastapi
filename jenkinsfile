def failureStage = "Unknown"

pipeline {
    agent any

    environment {
        // [Í∏∞Î≥∏ ÏûêÍ≤© Ï¶ùÎ™Ö]
        GHCR_CREDS_ID = 'ghcr-creds'
        GITHUB_CREDS_ID = 'github-creds'
        TARGET_SSH_CREDS_ID = 'a5-localhost-jenkins'
        DISCORD_CREDS_ID = 'discord-webhook-url'

        // [ÏÑúÎ≤Ñ Ï†ïÎ≥¥]
        TARGET_DEPLOY_SERVER = 'GEEKOM-A5-Server'
        TARGET_HOST = credentials('ssh-host-creds')
        TARGET_PORT = credentials('ssh-port-creds')
        
        // [ÌîÑÎ°úÏ†ùÌä∏Î≥Ñ ÏàòÏ†ï ÏÑπÏÖò] ========================================================
        // 1. Ïù¥ÎØ∏ÏßÄ Ïù¥Î¶Ñ
        IMAGE_NAME = 'ghcr.io/paul2021-r/project-protostar-fastapi'
        
        // 2. Î∞∞Ìè¨Îê† ÏÑúÎ≤Ñ Í≤ΩÎ°ú (ÎØ∏Î¶¨ mkdirÎ°ú ÏÉùÏÑ± Í∂åÏû•)
        TARGET_PROJECT_PATH = '/home/hansol/workspace/project-protostar-fastapi'
        
        // 3. Ïù∏ÌîÑÎùº ÏÑ§Ï†ï Í≤ΩÎ°ú
        TARGET_INFRA_PATH = '/home/hansol/workspace/project-protostar-server-configs/main-server'
        
        // 4. Nginx Upstream ÌååÏùºÎ™Ö (Main ServerÏóê ÎßåÎì§Ïñ¥Îë¨Ïïº Ìï®)
        UPSTREAM_FILE_NAME = 'nginx_upstream_fastapi.conf'

        // 5. Image TAG
        FASTAPI_BLUE_IMAGE = 'ghcr.io/paul2021-r/project-protostar-fastapi'
        FASTAPI_GREEN_IMAGE = 'ghcr.io/paul2021-r/project-protostar-fastapi'
        // ==============================================================================
    }

    parameters {
        choice(name: 'TARGET_COLOR', choices: ['Auto', 'Blue', 'Green', 'Both'], description: 'Select the color to deploy. Auto follows BUILD_NUMBER odd/even logic.')
        choice(name: 'DEPLOY_ACTION', choices: ['Full Deploy', 'Build & Deploy Only', 'Switch Traffic Only'], description: 'Select the scope of the deployment.')
    }

    stages {
        stage('Checkout') {
            steps {
                script {
                    try {
                        echo "1. Get the latest code from GitHub"
                        git credentialsId: GITHUB_CREDS_ID, url: 'https://github.com/Paul2021-R/project-protostar-fastapi.git', branch: 'main'
                    } catch (Exception e) {
                        failureStage = "Checkout Stage"
                        throw e
                    }
                }
            }
        }

        stage('Build Image') {
            when {
                expression { params.DEPLOY_ACTION != 'Switch Traffic Only' }
            }
            steps {
                echo "2. Build New Docker Image"
                script {
                    try {
                        def imageTag = "${IMAGE_NAME}:${env.BUILD_NUMBER}" 
                        // [ÌïµÏã¨] DockerfileÏù¥ ./app ÏïàÏóê ÏûàÏúºÎØÄÎ°ú Í≤ΩÎ°ú ÏßÄÏ†ï
                        sh "docker build -t ${imageTag} ./app" 
                    } catch (Exception e) {
                        failureStage = "Build Stage"
                        throw e
                    }
                }
            }
        }

        stage('Push to GHCR') {
            when {
                expression { params.DEPLOY_ACTION != 'Switch Traffic Only' }
            }
            steps {
                echo "3. Push the Docker Image to GHCR"
                script {
                    try {
                        def imageTag = "${IMAGE_NAME}:${env.BUILD_NUMBER}"
                        withCredentials([usernamePassword(credentialsId: GHCR_CREDS_ID, usernameVariable: 'USER', passwordVariable: 'TOKEN')]) {
                            sh "echo ${TOKEN} | docker login ghcr.io -u ${USER} --password-stdin"
                            sh "docker push ${imageTag}"
                        }
                    } catch (Exception e) {
                        failureStage = "Push to GHCR Stage"
                        throw e
                    }
                }
            }
        }

        stage('Deploy to Server') {
            steps {
                echo "4. Deploy to ${TARGET_DEPLOY_SERVER}"
                script {
                    try {
                        // 1. Determine Target Services
                        def deployServices = []
                        if (params.TARGET_COLOR == 'Both') {
                             deployServices = ['fastapi-blue', 'fastapi-green']
                        } else if (params.TARGET_COLOR == "Auto") {
                             deployServices = [(env.BUILD_NUMBER.toInteger() % 2 == 0) ? "fastapi-green" : "fastapi-blue"]
                        } else if (params.TARGET_COLOR == "Blue") {
                             deployServices = ["fastapi-blue"]
                        } else {
                             deployServices = ["fastapi-green"]
                        }
                        
                        echo "Target Services via ${params.TARGET_COLOR}: ${deployServices}"

                        def imageTag = "${IMAGE_NAME}:${env.BUILD_NUMBER}"
                        def newTag = "${env.BUILD_NUMBER}"
                        def earlyTag = "${Math.max(1, env.BUILD_NUMBER.toInteger() - 1)}"

                        withCredentials([
                            usernamePassword(credentialsId: GHCR_CREDS_ID, usernameVariable: 'GHCR_USER', passwordVariable: 'GHCR_TOKEN'),
                            file(credentialsId: 'prod-fastapi-env-file', variable: 'PROD_ENV_FILE')
                            ]) {
                            sshagent(credentials: [TARGET_SSH_CREDS_ID]) {
                                // [NEW] 1. SCP the Secret File to server (Safe Transfer)
                                
                                // Ensure remote directory exists
                                sh "ssh -o StrictHostKeyChecking=no -p ${TARGET_PORT} ${TARGET_HOST} 'mkdir -p ${TARGET_PROJECT_PATH}'"
                                
                                // SCP the file provided by Jenkins (PROD_ENV_FILE is the temp path)
                                sh "scp -o StrictHostKeyChecking=no -P ${TARGET_PORT} ${PROD_ENV_FILE} ${TARGET_HOST}:${TARGET_PROJECT_PATH}/.env"
                                
                                // No need to cleanup local file manually, Jenkins handles it.

                                // 2. Deployment Script Construction
                                def commands = []

                                // Common Setup
                                commands << "set -e"

                                // Action: Build & Deploy (or Full)
                                if (params.DEPLOY_ACTION != 'Switch Traffic Only') {
                                    commands << "echo '--- [1/5] Login to GHCR ---'"
                                    commands << "echo '${GHCR_TOKEN}' | docker login ghcr.io -u ${GHCR_USER} --password-stdin"

                                    commands << "echo '--- [2/5] Pull Image (${imageTag}) ---'"
                                    commands << "docker pull ${imageTag}"

                                    commands << "echo '--- [3/5] Deploy Container(s) ---'"
                                    commands << "mkdir -p ${TARGET_PROJECT_PATH}"
                                    commands << "cd ${TARGET_PROJECT_PATH}"
                                    
                                    commands << "git pull origin main || git clone https://github.com/Paul2021-R/project-protostar-fastapi.git ."

                                    commands << "git pull origin main || git clone https://github.com/Paul2021-R/project-protostar-fastapi.git ."
                                    
                                    // [MOVED] .env creation is handled via scp before this script runs
                                    commands << "echo '--- [4/5] Update Environment Variables ---'"
                                    // commands << "echo \"${PROD_FASTAPI_ENV}\" > .env" // Removed unsafe echo
                                    commands << "export FASTAPI_BLUE_IMAGE=${FASTAPI_BLUE_IMAGE}"
                                    commands << "export FASTAPI_GREEN_IMAGE=${FASTAPI_GREEN_IMAGE}"
                                    
                                    // Loop through services
                                    deployServices.each { service ->
                                        def tagEnvVar = (service == "fastapi-green") ? "TAG_GREEN" : "TAG_BLUE"
                                        commands << "echo '--- Exporting new tag for ${service}: ${tagEnvVar}=${newTag} ---'"
                                        commands << "export ${tagEnvVar}='${newTag}'"
                                    }

                                    // If 'Single' case, we formerly exported the opposite tag too.
                                    if (params.TARGET_COLOR != 'Both') {
                                        def activeService = deployServices[0]
                                        def tagOppositeEnvVar = (activeService == "fastapi-green") ? "TAG_BLUE" : "TAG_GREEN"
                                        commands << "export ${tagOppositeEnvVar}='${earlyTag}'"
                                    }

                                    deployServices.each { service ->
                                        commands << "docker compose --env-file .env up -d --no-deps --force-recreate ${service}"
                                    }
                                    
                                    commands << "echo '--- Cleanup ---'"
                                    commands << "docker logout ghcr.io"
                                }

                                // Action: Switch Traffic (or Full)
                                if (params.DEPLOY_ACTION != 'Build & Deploy Only') {
                                    commands << "echo '--- [4/5] Switch Nginx Upstream ---'"
                                    
                                    if (params.TARGET_COLOR != 'Both') {
                                        def targetService = deployServices[0]
                                        commands << "cd ${TARGET_INFRA_PATH}"
                                        // sedÎ°ú upstream ÌååÏùº ÏàòÏ†ï (Main Server ÌååÏùºÍ≥º ÏùºÏπòÌï¥Ïïº Ìï®)
                                        commands << "sed -i 's|server .*|server ${targetService}:8000;|' ./nginx/${UPSTREAM_FILE_NAME}"
                                    } else {
                                        commands << "echo 'Skipping Nginx Upstream Switch because TARGET_COLOR is Both (Preserving current active upstream)'"
                                    }

                                    commands << "echo '--- [5/5] Reload Main Nginx ---'"
                                    commands << "docker exec main-protostar-nginx nginx -s reload"
                                }
                                
                                commands << "echo '--- All Deploy Proccess is done ---'"

                                def deployScript = commands.join('\n')
                                sh "ssh -o StrictHostKeyChecking=no -o ConnectTimeout=10 -o ServerAliveInterval=60 -o ServerAliveCountMax=3 -p ${TARGET_PORT} ${TARGET_HOST} \"${deployScript}\""
                            }
                        }
                    } catch (Exception e) {
                        failureStage = "Deploy Stage"
                        throw e
                    }
                }
            }
        }
    }

    post {
        success {
            script {
                withCredentials([string(credentialsId: DISCORD_CREDS_ID, variable: 'DISCORD_URL')]) {
                    def message = "{\"content\": \"üöÄ [FastAPI] Build #${env.BUILD_NUMBER} Success!\"}"
                    sh "curl -X POST -H 'Content-Type: application/json' --data '${message}' ${DISCORD_URL}"
                }
            }
        }
        failure {
            script {
                withCredentials([string(credentialsId: DISCORD_CREDS_ID, variable: 'DISCORD_URL')]) {
                    def message = "{\"content\": \"üî• [FastAPI] Build #${env.BUILD_NUMBER} Failed at ${failureStage}.\"}"
                    sh "curl -X POST -H 'Content-Type: application/json' --data '${message}' ${DISCORD_URL}"
                }    
            }
        }
    }
}