def failureStage = "Unknown"

pipeline {
    agent any

    environment {
        // [Í∏∞Î≥∏ ÏûêÍ≤© Ï¶ùÎ™Ö]
        GHCR_CREDS_ID = 'ghcr-creds'
        GITHUB_CREDS_ID = 'github-creds'
        TARGET_SSH_CREDS_ID = 'a5-localhost-jenkins'
        DISCORD_CREDS_ID = 'discord-webhook-url'

        // [ÏÑúÎ≤Ñ Ï†ïÎ≥¥]
        TARGET_DEPLOY_SERVER = 'GEEKOM-A5-Server'
        TARGET_HOST = credentials('ssh-host-creds')
        TARGET_PORT = credentials('ssh-port-creds')
        
        // [ÌîÑÎ°úÏ†ùÌä∏Î≥Ñ ÏàòÏ†ï ÏÑπÏÖò] ========================================================
        // 1. Ïù¥ÎØ∏ÏßÄ Ïù¥Î¶Ñ
        IMAGE_NAME = 'ghcr.io/paul2021-r/project-protostar-fastapi'
        
        // 2. Î∞∞Ìè¨Îê† ÏÑúÎ≤Ñ Í≤ΩÎ°ú (ÎØ∏Î¶¨ mkdirÎ°ú ÏÉùÏÑ± Í∂åÏû•)
        TARGET_PROJECT_PATH = '/home/hansol/workspace/project-protostar-fastapi'
        
        // 3. Ïù∏ÌîÑÎùº ÏÑ§Ï†ï Í≤ΩÎ°ú
        TARGET_INFRA_PATH = '/home/hansol/workspace/project-protostar-server-configs/main-server'
        
        // 4. Nginx Upstream ÌååÏùºÎ™Ö (Main ServerÏóê ÎßåÎì§Ïñ¥Îë¨Ïïº Ìï®)
        UPSTREAM_FILE_NAME = 'nginx_upstream_fastapi.conf'
        // ==============================================================================
    }

    stages {
        stage('Checkout') {
            steps {
                script {
                    try {
                        echo "1. Get the latest code from GitHub"
                        git credentialsId: GITHUB_CREDS_ID, url: 'https://github.com/Paul2021-R/project-protostar-fastapi.git', branch: 'main'
                    } catch (Exception e) {
                        failureStage = "Checkout Stage"
                        throw e
                    }
                }
            }
        }

        stage('Build Image') {
            steps {
                echo "2. Build New Docker Image"
                script {
                    try {
                        def imageTag = "${IMAGE_NAME}:${env.BUILD_NUMBER}" 
                        // [ÌïµÏã¨] DockerfileÏù¥ ./app ÏïàÏóê ÏûàÏúºÎØÄÎ°ú Í≤ΩÎ°ú ÏßÄÏ†ï
                        sh "docker build -t ${imageTag} ./app" 
                    } catch (Exception e) {
                        failureStage = "Build Stage"
                        throw e
                    }
                }
            }
        }

        stage('Push to GHCR') {
            steps {
                echo "3. Push the Docker Image to GHCR"
                script {
                    try {
                        def imageTag = "${IMAGE_NAME}:${env.BUILD_NUMBER}"
                        withCredentials([usernamePassword(credentialsId: GHCR_CREDS_ID, usernameVariable: 'USER', passwordVariable: 'TOKEN')]) {
                            sh "echo ${TOKEN} | docker login ghcr.io -u ${USER} --password-stdin"
                            sh "docker push ${imageTag}"
                        }
                    } catch (Exception e) {
                        failureStage = "Push to GHCR Stage"
                        throw e
                    }
                }
            }
        }

        stage('Deploy to Server') {
            steps {
                echo "4. Deploy to ${TARGET_DEPLOY_SERVER}"
                script {
                    try {
                        def deployService = (env.BUILD_NUMBER.toInteger() % 2 == 0) ? "fastapi-green" : "fastapi-blue" 
                        def imageTag = "${IMAGE_NAME}:${env.BUILD_NUMBER}"
                        def newTag = "${env.BUILD_NUMBER}"
                        def tagEnvVar = (deployService == "fastapi-green") ? "TAG_GREEN" : "TAG_BLUE"
                        
                        withCredentials([usernamePassword(credentialsId: GHCR_CREDS_ID, usernameVariable: 'GHCR_USER', passwordVariable: 'GHCR_TOKEN')]) {
                            sshagent(credentials: [TARGET_SSH_CREDS_ID]) {
                                sh """ 
                                    ssh -o StrictHostKeyChecking=no -p ${TARGET_PORT} ${TARGET_HOST} '
                                    set -ex

                                    echo "--- [1/5] Login to GHCR ---"
                                    echo "${GHCR_TOKEN}" | docker login ghcr.io -u ${GHCR_USER} --password-stdin

                                    echo "--- [2/5] Pull Image (${imageTag}) ---"
                                    docker pull ${imageTag}

                                    echo "--- [3/5] Deploy Container (${deployService}) ---"
                                    mkdir -p ${TARGET_PROJECT_PATH}
                                    cd ${TARGET_PROJECT_PATH}
                                    
                                    git pull origin main || git clone https://github.com/Paul2021-R/project-protostar-fastapi.git .
                                    
                                    export ${tagEnvVar}="${newTag}"
                                    docker compose --env-file init.env up -d --no-deps --force-recreate ${deployService}

                                    echo "--- [4/5] Switch Nginx Upstream ---"
                                    cd ${TARGET_INFRA_PATH}
                                    # sedÎ°ú upstream ÌååÏùº ÏàòÏ†ï (Main Server ÌååÏùºÍ≥º ÏùºÏπòÌï¥Ïïº Ìï®)
                                    # Ï¥àÍ∏∞ ÏÑ§Ï†ï(127.0.0.1 Îì±)ÏùÑ Ïã§Ï†ú Ïª®ÌÖåÏù¥ÎÑà Ï£ºÏÜåÎ°ú Î≥ÄÍ≤Ω
                                    sed -i "s|server .*|server main-${deployService}:8000;|" ./nginx/${UPSTREAM_FILE_NAME}

                                    echo "--- [5/5] Reload Main Nginx ---"
                                    docker exec main-protostar-nginx nginx -s reload

                                    echo "--- Cleanup ---"
                                    docker logout ghcr.io
                                    '
                                """
                            }
                        }
                    } catch (Exception e) {
                        failureStage = "Deploy Stage"
                        throw e
                    }
                }
            }
        }
    }

    post {
        success {
            script {
                withCredentials([string(credentialsId: DISCORD_CREDS_ID, variable: 'DISCORD_URL')]) {
                    def message = "{\"content\": \"üöÄ [FastAPI] Build #${env.BUILD_NUMBER} Success!\"}"
                    sh "curl -X POST -H 'Content-Type: application/json' --data '${message}' ${DISCORD_URL}"
                }
            }
        }
        failure {
            script {
                withCredentials([string(credentialsId: DISCORD_CREDS_ID, variable: 'DISCORD_URL')]) {
                    def message = "{\"content\": \"üî• [FastAPI] Build #${env.BUILD_NUMBER} Failed at ${failureStage}.\"}"
                    sh "curl -X POST -H 'Content-Type: application/json' --data '${message}' ${DISCORD_URL}"
                }    
            }
        }
    }
}